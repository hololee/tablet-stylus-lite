<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.leejh.hanul.stylus.lite.settingActivity">


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/bt_01"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:paddingLeft="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/button1_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/bt_02"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/button2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/bt_03"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:paddingRight="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/button3" />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/page1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_marginBottom="140dp"
        android:background="@drawable/setting_back_1"
        android:visibility="visible">

        <TextView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:text="+"
            android:textColor="#B5B5B5"
            android:textSize="80dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_ctrl1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_ctrl" />

        <ImageButton
            android:id="@+id/button_alt1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_ctrl1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_alt" />

        <ImageButton
            android:id="@+id/button_shift1"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_alt1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_shift" />

        <ImageButton
            android:id="@+id/button_spacebar1"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_shift1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_spacebar" />


        <EditText
            android:id="@+id/key1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="140dp"
            android:background="#B5B5B5"
            android:hint="ex) a"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true" />


        <ImageButton
            android:id="@+id/key1C"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/key1"
            android:layout_below="@+id/key1"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/selector3_en" />

        <TextView
            android:id="@+id/ke1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/key1"
            android:layout_below="@+id/key1C"
            android:text="key : "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ketText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/key1C"
            android:layout_toRightOf="@+id/ke1"
            android:text=""
            android:textSize="15dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_marginBottom="140dp"
        android:background="@drawable/setting_back_2"
        android:visibility="gone">

        <TextView
            android:id="@+id/plus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:text="+"
            android:textColor="#B5B5B5"
            android:textSize="80dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/button_ctrl2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_ctrl" />

        <ImageButton
            android:id="@+id/button_alt2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_ctrl2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_alt" />

        <ImageButton
            android:id="@+id/button_shift2"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_alt2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_shift" />

        <ImageButton
            android:id="@+id/button_spacebar2"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_shift2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button_spacebar" />


        <EditText
            android:id="@+id/key2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="140dp"
            android:background="#B5B5B5"
            android:hint="ex) a"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/key2C"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/key2"
            android:layout_below="@+id/key2"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/selector3_en" />

        <TextView
            android:id="@+id/ke2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/key2"
            android:layout_below="@+id/key2C"
            android:text="key : "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ketText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/key2C"
            android:layout_toRightOf="@+id/ke2"
            android:text=""
            android:textSize="15dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_marginBottom="140dp"
        android:background="@drawable/setting_back_3"
        android:visibility="gone">

        <TextView
            android:textSize="19dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/dddd"/>


    </RelativeLayout>




    <TextView
        android:textStyle="bold"
        android:id = "@+id/init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button01"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:text="@string/string2"
        android:textColor="#1ae8a4"
        android:textSize="22sp" />





    <ImageButton
        android:id="@+id/button01"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/selector3" />


</RelativeLayout>
